<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.app.findmedicine.Detail_activity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="生證日"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ff3765ff" />

            <TextView
                android:id="@+id/txtIsChange"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="有效日"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ff3765ff" />

            <TextView
                android:id="@+id/txtFromTo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="廠商"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ff3765ff" />

            <TextView
                android:id="@+id/txtCompany"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="藥名(英文)"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ff3765ff" />

            <TextView
                android:id="@+id/txtEName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="藥名(中文)"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ff3765ff" />

            <TextView
                android:id="@+id/txtMedName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="健保碼"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ff3765ff" />

            <TextView
                android:id="@+id/txtMedCode"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="健保價"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ff3765ff" />

            <TextView
                android:id="@+id/txtHprice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="適用"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ff3765ff" />

            <TextView
                android:id="@+id/txtIndiCat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
